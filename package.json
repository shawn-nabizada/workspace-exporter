{
  "name": "workspace-exporter",
  "displayName": "Workspace Exporter",
  "description": "Export the current VS Code workspace into a single TXT file using different templates (React + Vite + TypeScript + Tailwind, generic web, all text & code, and more).",
  "version": "0.0.1",
  "publisher": "snabby",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "exportIcon.png",
  "galleryBanner": {
    "color": "#2563EB",
    "theme": "dark"
  },
  "keywords": [
    "export",
    "txt",
    "workspace",
    "ai",
    "codebase",
    "vite",
    "react",
    "typescript",
    "tailwind"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shawn-nabizada/workspace-exporter.git"
  },
  "bugs": {
    "url": "https://github.com/shawn-nabizada/workspace-exporter/issues"
  },
  "homepage": "https://github.com/shawn-nabizada/workspace-exporter",
  "license": "MIT",

  "activationEvents": [
    "onCommand:workspaceExporter.exportWithTemplate"
  ],

  "main": "./out/extension.js",

  "contributes": {
    "commands": [
      {
        "command": "workspaceExporter.exportWithTemplate",
        "title": "Export Workspace to TXT (Choose Template)",
        "category": "Workspace Exporter"
      }
    ]
  },

  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish"
  },

  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "typescript": "^5.9.3"
  }
}
