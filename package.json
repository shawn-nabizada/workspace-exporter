{
  "name": "workspace-files-exporter",
  "displayName": "Workspace Files Exporter",
  "description": "Export the current VS Code workspace into a single TXT file using different templates (React + Vite + TypeScript + Tailwind, generic web, all text & code, and more).",
  "version": "2.2.1",
  "publisher": "snabby",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "exportIcon.png",
  "galleryBanner": {
    "color": "#2563EB",
    "theme": "dark"
  },
  "keywords": [
    "export",
    "txt",
    "workspace",
    "ai",
    "codebase",
    "vite",
    "react",
    "typescript",
    "tailwind"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shawn-nabizada/workspace-exporter.git"
  },
  "bugs": {
    "url": "https://github.com/shawn-nabizada/workspace-exporter/issues"
  },
  "homepage": "https://github.com/shawn-nabizada/workspace-exporter",
  "license": "MIT",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workspaceExporter.exportWithTemplate",
        "title": "Export Workspace to TXT (Choose Template)",
        "category": "Workspace Exporter"
      },
      {
        "command": "workspaceExporter.exportStaged",
        "title": "Export Staged Files (Git)",
        "category": "Workspace Exporter"
      },
      {
        "command": "workspaceExporter.exportChanges",
        "title": "Export Changed Files (Git)",
        "category": "Workspace Exporter"
      },
      {
        "command": "workspaceExporter.previewExport",
        "title": "Preview Export Stats",
        "category": "Workspace Exporter"
      }
    ],
    "configuration": {
      "title": "Workspace Exporter",
      "properties": {
        "workspaceExporter.customTemplates": {
          "type": "array",
          "description": "Define your own custom export templates.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique ID for the template"
              },
              "label": {
                "type": "string",
                "description": "Display name in the Quick Pick"
              },
              "description": {
                "type": "string",
                "description": "Short description"
              },
              "pattern": {
                "type": "string",
                "description": "Glob pattern for files to include"
              },
              "exclude": {
                "type": "string",
                "description": "Glob pattern for files to exclude"
              }
            }
          },
          "default": []
        },
        "workspaceExporter.globalExcludes": {
          "type": "array",
          "description": "Glob patterns to exclude from ALL templates (in addition to template-specific excludes).",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "workspaceExporter.outputFormat": {
          "type": "string",
          "enum": [
            "text",
            "xml",
            "markdown"
          ],
          "default": "text",
          "description": "Format of the exported file."
        },
        "workspaceExporter.copyToClipboard": {
          "type": "boolean",
          "default": false,
          "description": "If true, automatically copies the exported content to the clipboard."
        },
        "workspaceExporter.includeFileTree": {
          "type": "boolean",
          "default": true,
          "description": "If true, includes a visual file tree at the beginning of the export."
        },
        "workspaceExporter.chunkSize": {
          "type": "number",
          "default": 0,
          "description": "Approximate token limit per file (0 to disable). If exceeded, output will be split into multiple files."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish",
    "lint": "eslint",
    "test": "vitest run",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.104.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.13"
  }
}
